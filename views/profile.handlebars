<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>


    <h3>Email Templates:</h3>

{{!-- {{regex}} --}}
    {{#each emails as |email|}}
    
    <div class="row mb-2" id="{{email.id}}">
      <div class="col-md-8">
        
        <p style="display: none;">{{email.id}}</p>
        <h4>{{email.name}}:</h4>


      </div>
    </div>
    {{/each}}

  {{#each emailBodies as |emailBody|}}
    {{!-- {{num}} --}}
 <div class="row mb-2 email" id = "{{emailBody.id}}">
      <div class="col-md-8" >
        <p>{{{emailBody.emailForm}}}</p>

        
      </div>
      {{!-- button  --}}
              <button class="btn btn-primary" id="button" type="submit">Templatize</button>

    </div>
{{/each}}





